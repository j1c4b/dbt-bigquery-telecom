# Telecom dbt Analytics Platform - Environment Configuration Template
# Copy this file to .env and update with your settings

# Google Cloud Platform Configuration
DBT_PROJECT_ID="mytrial-billinglearningaccount"
DBT_LOCATION=US

# BigQuery Datasets
DBT_DATASET_DEV=telecom_dev
DBT_DATASET_TEST=telecom_test
DBT_DATASET_PROD=telecom_prod

# Raw data configuration
DBT_RAW_DATASET=telecom_raw_data

# Authentication (choose one method)
# Method 1: Service Account Key File - Dedicated for Telecom dbt Project
DBT_KEYFILE_PATH="/path/to/your/project/phase1/keys/telecom-dbt-service-account.json"

# Method 2: OAuth (comment out keyfile above if using this)
# DBT_METHOD=oauth

# Performance and Safety Limits
DBT_THREADS=4
DBT_TIMEOUT_SECONDS=300
DBT_MAX_BYTES_BILLED=1000000000    # 1GB safety limit

# Phase-specific variables
# Phase 1: Data validation thresholds
MIN_CUSTOMER_AGE=16
MAX_CUSTOMER_AGE=120
MAX_DAILY_DATA_GB=100
MAX_MONTHLY_BILL=500

# Phase 2: Analytics parameters (for future use)
CHURN_THRESHOLD_DAYS=90
HIGH_VALUE_CUSTOMER_THRESHOLD=100
LOOKBACK_MONTHS=12

# Data quality settings
TEST_SEVERITY=warn              # warn or error
STORE_TEST_FAILURES=true
TEST_SAMPLE_SIZE=10000

# Development settings
DBT_LOG_LEVEL=info             # debug, info, warn, error
DBT_USE_COLORS=true
DBT_STATIC_PARSER=true

# Optional: Elementary data monitoring
ELEMENTARY_SLACK_WEBHOOK=      # For data quality alerts
ELEMENTARY_DATASET=telecom_data_qa_monitor  # Dataset for monitoring tables

# Optional: dbt Cloud integration
# DBT_CLOUD_ACCOUNT_ID=
# DBT_CLOUD_PROJECT_ID=
# DBT_CLOUD_API_KEY=

# Documentation settings
DBT_DOCS_PORT=8080
DBT_DOCS_HOST=localhost